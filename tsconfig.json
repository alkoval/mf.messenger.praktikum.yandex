{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "removeComments": true,
    "outDir": "dist/js",
    "sourceMap": true,
    //"outFile": "index.js",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*", "node_modules/handlebars/types"],
  "exclude": ["test/**/*.spec.ts"]
}
